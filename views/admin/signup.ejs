<%- include('./includes/head.ejs') %>
  </head>
  <body>
    <%- include('./includes/navbar.ejs') %>
    <!-- end navbar -->

    <div class="container-fluid page-content my-5">
      <div class="row justify-content-center mt-5">
        <div class="col-md-5 form-section">
          <div class="form-content sticky-top">
            <div class="form-header">
              <img src="/img/books-icon.png" alt="Book Inventory" class="d-block mx-auto" width="6%">
              <h5 class="text-center mt-2"><%= mainTitle %></h5>
            </div>
            <form enctype="multipart/form-data" class="text-center pt-4" action="/admin/signup" method="POST">
              <input type="hidden" name="_csrf" value="<%=csrfToken%>">
              <div class="form-group row justify-content-center">
                <label for="fullname" class="col-form-label col-form-label-sm col-sm-4 text-right">Full Name</label>
                <div class="col-sm-6">
                  <input type="text" class="form-control form-control-sm" id="fullname" name="fullname" placeholder="Enter your Name & Last Name">
                </div>
              </div>
              <div class="form-group row justify-content-center">
                <label for="email" class="col-form-label col-form-label-sm col-sm-4 text-right">Email</label>
                <div class="col-sm-6">
                  <input type="email" class="form-control form-control-sm" id="email" name="email" placeholder="Enter your Email">
                </div>
              </div>
              <div class="form-group row justify-content-center">
                <label for="password" class="col-form-label col-form-label-sm col-sm-4 text-right">Password</label>
                <div class="col-sm-6">
                  <input type="password" class="form-control form-control-sm" id="password" name="password" placeholder="Enter your Password">
                </div>
              </div>
              <div class="form-group row justify-content-center">
                <label for="confirmPassword" class="col-form-label col-form-label-sm col-sm-4 text-right">Confirm Password</label>
                <div class="col-sm-6">
                  <input type="password" class="form-control form-control-sm" id="confirmPassword" name="confirmPassword" placeholder="Enter your Password Again">
                </div>
              </div>
              <button type="submit" class="btn btn-add mt-2 px-5">SignUp</button>
            </form>
          </div>
        </div><!-- end form -->
      </div>
    </div><!-- end page content -->

    <%- include('./includes/footer.ejs') %>
    <!-- end footer -->
  </body>
</html>