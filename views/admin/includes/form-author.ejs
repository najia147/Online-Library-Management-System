<form enctype="multipart/form-data" action="/admin/authorupdated" method="POST">
  <input type="hidden" name="_csrf" value="<%=csrfToken%>">
  <input type="hidden" name="id" value="<%= authorDoc._id %>">
    <div class="form-row">
      <div class="form-group col-sm-12">
        <label style="cursor: pointer;" for="profile" class="col-form-label col-form-label-sm"><i class="far fa-solid fa-image"></i> Profile </label>
        <input type="file" class="form-control form-control-sm" id="profile" name="profile" onchange="loadFile(event)" style="display: none;">
        <img src="/<%= authorDoc.profile %>" id="output" width="50" class="d-block" />
        <input type="hidden" name="currentImg" value="<%= authorDoc.profile %>">
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-sm-3">
        <label for="authorID" class="col-form-label col-form-label-sm">Author ID</label>
        <input type="text" class="form-control form-control-sm" id="authorID" name="authorID" value="<%= authorDoc.id %>">
      </div>
      <div class="form-group col-sm-3">
        <label for="dob" class="col-form-label col-form-label-sm">Date of Birth</label>
        <input type="date" class="form-control form-control-sm" id="dob" name="dob"  value="<%= authorDoc.dob %>">
      </div>
      <div class="form-group col-sm-6">
        <label for="fullname" class="col-form-label col-form-label-sm">Full Name</label>
        <input type="text" class="form-control form-control-sm" id="fullname" name="fullname"  value="<%= authorDoc.fullname %>">
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="form-row">
          <div class="form-group col-sm-4">
            <label for="email" class="col-form-label col-form-label-sm">Email</label>
            <input type="email" class="form-control form-control-sm" id="email" name="email" value="<%= authorDoc.email %>">
          </div>
          <div class="form-group col-sm-8">
            <label for="twitter" class="col-form-label col-form-label-sm">Twitter</label>
            <input type="url" class="form-control form-control-sm" id="twitter" name="twitter" value="<%= authorDoc.twitter %>">
          </div>
        </div>
        <div class="form-group row">
          <label for="linkedin" class="col-form-label col-form-label-sm col-sm-2">LinkedIn</label>
          <div class="col-sm-10">
            <input type="url" class="form-control form-control-sm" id="linkedin" name="linkedin" value="<%= authorDoc.linkedin %>">
          </div>
        </div>
        <div class="form-group row">
          <label for="facebook" class="col-form-label col-form-label-sm col-sm-2">Facebook</label>
          <div class="col-sm-10">
            <input type="url" class="form-control form-control-sm" id="facebook" name="facebook" value="<%= authorDoc.facebook %>">
          </div>
        </div>
        <div class="form-group">
          <textarea class="form-control form-control-sm" id="bio" name="bio"  rows="3"><%= authorDoc.bio %></textarea>
        </div>
      </div>
    </div>
    
    <button type="submit" class="btn btn-add mt-2 px-5">Update</button>
    <a href="/admin/author" class="btn btn-cancel mt-2 px-5">Cancel</a>
  </form>